N = 6
L = []
for i in range(0,N):
    L.append(i)
print(L)
tot= 0
for i in range(N):
   for j in range(N):
      tot+= abs(L[j]-L[i])
obs= N*N
print('Total Distance:', tot)
print('Total number of pairs:', obs)
print('Average Distance:', tot/obs)





#OUTPUT
#Total Distance: 70
#Total number of pairs: 36
#Average Distance: 1.9444444444444444
